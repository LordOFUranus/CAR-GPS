<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_login">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
        <TextView
                android:text="Авторизация"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_logban"
                android:textSize="48sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="ИИН пользователя"
                android:ems="12"
                android:id="@+id/edt_iid"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_logban"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="12"
                android:hint="Пароль"
                android:id="@+id/edt_pass"
                app:layout_constraintTop_toBottomOf="@+id/edt_iid"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="32dp"/>
        <Button
                android:text="Войти"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:id="@+id/btn_entere"
                app:layout_constraintTop_toBottomOf="@+id/edt_pass"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="32dp"/>
        <Button
                android:text="Регистрация"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:id="@+id/btn_registration"
                app:layout_constraintTop_toBottomOf="@+id/btn_entere"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="32dp"

                android:onClick="registrationOnClick"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>